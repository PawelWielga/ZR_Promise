@inherits LayoutComponentBase

<div class="h-screen bg-gray-900 text-gray-100 flex">
    <aside id="app-sidebar"
           class="fixed inset-y-0 left-0 z-40 hidden w-64 md:block bg-gray-800 text-gray-200 border-r border-gray-700 overflow-y-auto">
        <div class="px-4 py-3 border-b border-gray-700">
            <span class="text-sm font-semibold tracking-wide text-gray-300">Nawigacja</span>
        </div>
        <div class="p-2">
            <NavMenu />
        </div>
    </aside>

    <div class="flex-1 md:pl-64 flex flex-col">
        <header class="shrink-0 sticky top-0 z-30 bg-gray-900/80 backdrop-blur border-b border-gray-800">
            <div class="flex items-center gap-3 px-4 py-2">
                <button type="button"
                        class="md:hidden inline-flex h-9 w-9 items-center justify-center rounded-lg border border-gray-700 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600"
                        aria-label="Otwórz menu"
                        onclick="document.getElementById('app-sidebar').classList.toggle('hidden')">
                    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>

                <h1 class="text-base sm:text-lg font-semibold">AppAudit</h1>

                <div class="ml-auto flex items-center gap-2">
                    <span class="text-xs text-gray-400 hidden sm:inline">v1.0</span>
                </div>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto px-3 sm:px-4 md:px-6 lg:px-8 xl:px-10 py-4 sm:py-6">
            @Body
        </main>

        <footer class="shrink-0 border-t border-gray-800 px-4 py-3 text-sm text-gray-400 flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <span>© @(DateTime.Now.Year) DIHOR</span>
            <span class="mt-1 sm:mt-0">
                Stworzone przez
                <a href="https://pawelwielga.dihor.pl/" target="_blank" class="text-gray-300 hover:text-white transition-colors">Pawe³ Wielga</a>
                ·
                <a href="https://github.com/PawelWielga" target="_blank" class="text-gray-300 hover:text-white transition-colors">GitHub</a>
            </span>
        </footer>
    </div>
</div>
